@foreach (var item in Model)
{
    <div class="col-md-4 grid-top" itemscope itemtype = "http://schema.org/Movie">
        <a rel="canonical" href="@Url.RouteUrl("XemChiTiet", new {@id=item.MaSP,@tensp=item.BiDanh})" class="b-link-stripe b-animate-go  thickbox">
            <img class="img-responsive" src="@Url.Content("~/Content/img-sp/SanPham/"+item.HinhAnh)" itemprop="@item.BiDanh" alt="@item.MaSP">
            <div class="b-wrapper">
                <h3 class="b-animate b-from-left    b-delay03  " style="text-align: left; font-size:15pt">
                    @Html.Raw(item.CauHinh)
                </h3>
            </div>
        </a>


        <p itemprop="@item.TenSP"><a rel="canonical" href="@Url.Action("ThemGioHang","GioHang", new {@MaSP=item.MaSP,@strURL=Request.Url.ToString()  })">@item.TenSP</a></p>
        <p itemprop="@item.DonGia.ToString("##,#")">@item.DonGia.ToString("##,#") VNĐ</p>
    </div>
}

